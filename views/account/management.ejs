<!--Content Heading Block-->
<% if (title) { %>
    <h1 id="manag-title"><%= title %></h1>
    <% } else {
        res.redirect('/')
    } %>
    
    <!--Message Block-->
<%- messages() %> 

<% if (typeof flash !== "undefined" && flash.notice) { %>
    <div class="flash-message" style="display: none;"><%= flash.notice %></div>
  <% } %>
  
  <% if (typeof errors !== "undefined" && errors.length > 0) { %>
    <ul class="error-list">
      <% errors.forEach(function(error) { %>
        <li><%= error.msg %></li>
      <% }) %>
    </ul>
<% } %>


